<h1>Wikis</h1>

<p>All of the wikis thus far</p>
<% if current_user %>
<div class="col-md-4 pull-right">
    <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
</div>
<% end %>
<div class="row">
    <div class="col-md-8">
        <% @wikis.each do |wiki| %>
        <div class="media">
            <div class="media-body">
                <h4 class="media-heading">
                    <%= link_to markdown(wiki.title), wiki %>
                </h4>
            </div>
        </div>
        <% end %>
    </div>
</div>
</div>
